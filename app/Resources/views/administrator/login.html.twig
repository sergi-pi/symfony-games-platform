{% extends 'base.html.twig' %}

{% block body %}
{% if error %}
    <div>{{ error.message }}</div>
{% endif %}
    <div class="container">
        <div class="card card-container">
            <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card" ></p>
            <form action="{{ path('admin_login_check') }}" method="post" class="form-signin">
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username"
                       value="{{ last_username }}" class="form-control" placeholder="Email address" />
                <label for="password">Password:</label>
                <input type="password" id="password" name="_password" class="form-control" placeholder="Password" />
                <input type="submit" name="login" class="btn btn-info" value="Login" />
            </form>
        </div>
    </div>
{% endblock %}
