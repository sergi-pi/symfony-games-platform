{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <h1 class="text-center">{{ category.games|length}} games of: {{ category.name }}</h1>
            <div class="container">
                <hr class="divider-title">
                <div class="row">
                    {% for game in category.games %}
                        <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                            <div class="project">
                                <figure class="img-responsive">
                                    <a href="{{path("chosenGame",{"id":game.id}) }}"><img class="card-img-top img-rounded" src="{{ imagepath ~ game.id }}.jpg" alt="">
                                        <span class="actions">
                            <span class="project-details">{{ game.name }}</span></span></a>
                                </figure>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

