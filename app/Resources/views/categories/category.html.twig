{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="container">
                <h1 class="text-center">{{ category.games|length}} games of: {{ category.name }}</h1>
                {% for game in category.games %}

                    <div class="col-md-3 col-sm-6 game-box">
                        <div class="card">
                            <a href="#"><img class="card-img-top img-rounded" src="{{ imagepath ~ game.id }}.jpg" alt="">
                                <div class="card-block">
                                    <h4 class="card-title">{{ game.name }}</h4>
                                    <p class="card-text">{{ game.description }}</p>
                                </div></a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}