{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Platform Games</h1>
<div class="container">
    <hr class="divider-title">
    <div class="row">
        {% for game in variables.getGames() %}
        <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
            <div class="project">
                <figure class="img-responsive">
                    <a href="{{path("chosenGame",{"id":game.id}) }}"><img class="card-img-top img-rounded" src="{{ imagepath ~ game.id }}.jpg" alt="">
                        <span class="actions">
                            <span class="project-details">{{ game.name }}</span></span></a>
                </figure>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

