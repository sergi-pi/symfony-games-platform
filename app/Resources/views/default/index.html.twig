{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="container">
                {% for game in games %}
                <div class="col-md-3 game-box">
                    <div class="card">
                        <img class="card-img-top" src="{{ imagepath ~ game.id }}.jpg" alt="">
                        <div class="card-block">
                            <h4 class="card-title">{{ game.name }}</h4>
                            <p class="card-text">{{ game.description }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

